<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_secondary_text_holo_dark</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_dark</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_dark</item>
        <item name="android:textColorLink">@color/wallet_holo_blue_light</item>
    </style>
    <style name="WalletFragmentDefaultDetailsHeaderTextAppearance" parent="@style/WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WalletFragmentDefaultButtonTextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_primary_text_holo_light</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_light</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_light</item>
        <item name="android:textColorLink">@color/wallet_link_text_light</item>
    </style>
    <style name="WalletFragmentDefaultStyle">
        <item name="buyButtonHeight">48.0dip</item>
        <item name="buyButtonWidth">match_parent</item>
        <item name="buyButtonText">buy_with_google</item>
        <item name="buyButtonAppearance">classic</item>
        <item name="maskedWalletDetailsTextAppearance">@style/WalletFragmentDefaultDetailsTextAppearance</item>
        <item name="maskedWalletDetailsHeaderTextAppearance">@style/WalletFragmentDefaultDetailsHeaderTextAppearance</item>
        <item name="maskedWalletDetailsBackground">@color/wallet_bright_foreground_holo_light</item>
        <item name="maskedWalletDetailsButtonTextAppearance">@style/WalletFragmentDefaultButtonTextAppearance</item>
        <item name="maskedWalletDetailsButtonBackground">@android:drawable/btn_default</item>
        <item name="maskedWalletDetailsLogoTextColor">@color/wallet_bright_foreground_holo_dark</item>
        <item name="maskedWalletDetailsLogoImageType">classic</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" />
    <style name="ThemeHoloNoAnimation" parent="@android:style/Theme.Holo">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>
    <style name="WelcomeBodyTitle">
        <item name="android:textSize">@dimen/welcome_body_title</item>
        <item name="android:textColor">@color/prompt1_text_color</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">@dimen/screen_layout_margin_left</item>
        <item name="android:paddingRight">@dimen/screen_layout_margin_right</item>
        <item name="android:paddingBottom">@dimen/screen_layout_margin_bottom</item>
    </style>
    <style name="WelcomeBodyTitle2">
        <item name="android:textSize">@dimen/welcome_body_title2</item>
        <item name="android:textColor">@color/prompt1_text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="WelcomeBodyText">
        <item name="android:textSize">@dimen/welcome_body_text</item>
    </style>
    <style name="Theme.Holo.Setting" parent="@android:style/Theme.Holo">
        <item name="android:windowAnimationStyle">@style/Animation.SettingAnimation</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>
    <style name="Theme.NoTitleBar.Setting" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation.SettingAnimation</item>
    </style>
    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Animation.SettingAnimation" parent="@android:style/Animation.Activity">
        <item name="android:taskOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_open_exit</item>
    </style>
    <style name="AnimationToast">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>
    <style name="GoogleScreenLayout">
        <item name="android:textSize">@dimen/welcome_body_text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginLeft">@dimen/screen_layout_margin_left</item>
        <item name="android:layout_marginTop">@dimen/screen_layout_margin_top</item>
        <item name="android:layout_marginRight">@dimen/screen_layout_margin_right</item>
    </style>
    <style name="NoiseMeterLayout">
        <item name="android:textSize">@dimen/welcome_body_text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginLeft">@dimen/noise_meter_layout_margin_left</item>
        <item name="android:layout_marginTop">@dimen/noise_meter_layout_margin_top</item>
        <item name="android:layout_marginRight">@dimen/noise_meter_layout_margin_right</item>
    </style>
    <style name="MotoButton.general_button_style" parent="@style/MotoButton">
        <item name="android:textSize">@dimen/button_textview_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="TinyGoogleCmdNormal">
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="MotoAppTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/moto_default_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:colorPrimaryDark">@color/status_bar_color</item>
    </style>
    <style name="MotoAppThemeNoHeaderLine" parent="@style/MotoAppTheme">
        <item name="android:actionBarStyle">@style/MotoActionNoHeaderLineBar</item>
    </style>
    <style name="MotoActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/moto_dark_blue</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/MotoActionBar.TitleTextStyle</item>
    </style>
    <style name="MotoActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="MotoActionNoHeaderLineBar" parent="@style/MotoActionBar">
        <item name="android:background">@color/moto_dark_blue</item>
    </style>
    <style name="MotoSpinner" parent="@android:style/Widget.Material.ProgressBar.Small">
        <item name="android:indeterminateTint">@color/primary_text_color</item>
    </style>
    <style name="MotoButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/button_quantum</item>
    </style>
</resources>
